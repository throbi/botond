{
  "name": "botond",
  "description": "Chrome browser extension for removing modal layers and enabling page scrolling.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_title": "Click to remove modal layers and to enable page scrolling!",
    "default_icon": {
        "16": "/images/botond_16.png",
        "32": "/images/botond_32.png",
        "48": "/images/botond_48.png",
        "64": "/images/botond_64.png",
        "128": "/images/botond_128.png"
    }
  },
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "/images/botond_16.png",
    "32": "/images/botond_32.png",
    "48": "/images/botond_48.png",
    "64": "/images/botond_64.png",
    "128": "/images/botond_128.png"
  }
}